{
    "manifest_version": 3,
    "name": "Market Papa",
    "description": "Market Papa test extension for WB",
    "version": "1.0",
    "action": {
      "default_popup": "hello.html",
      "default_icon": "market-papa.png"
    },
    "permissions": ["webRequest", "activeTab", "storage", "unlimitedStorage", "tabs",
        "scripting", "notifications","webNavigation"],
    "host_permissions": [
        "https://www.wildberries.ru/*",
        "https://wildberries.ru/*",
        "https://static-basket-01.wb.ru/*",
        "https://card.wb.ru/cards/*"
      ],

    "background": {
        "service_worker": "scripts/background.js",

        "permissions": ["scripting","webNavigation","webRequest", "activeTab","tabs","notifications"],
    "host_permissions": ["<all_urls>"]
      },

    "content_scripts": [
        {
          "js": ["scripts/content.js"],
          "matches": [
            "https://*.wildberries.ru/*",
            "https://*.wb.ru/*",
            "https://wildberries.ru/*",
            "https://www.wildberries.ru/*",
            "https://wildberries.ru/*",
            "https://static-basket-01.wb.ru/*",
            "https://card.wb.ru/cards/*"
          ],
          "run_at": "document_idle",
          "all-frames": true,
          "css": ["content.css"]

        }
      ]
  }